      "default": "El Vino"
    },
    {
      "type": "text",
      "id": "wine_type",
      "label": "Wine Type",
      "default": "Tinto Dulce Natural"
    },
    {
      "type": "text",
      "id": "wine_note",
      "label": "Wine Note",
      "default": "Fruta roja madura, goloso en boca, final fresco."
    },
    {
      "type": "text",
      "id": "wine_design",
