<div id="modal-valenton" class="fixed inset-0 z-[9999] hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <!-- Backdrop with blur -->
  <div class="absolute inset-0 bg-neutral-900/60 backdrop-blur-sm transition-opacity" onclick="document.getElementById('modal-valenton').classList.add('hidden');"></div>

  <!-- Slide-over Panel Container -->
  <div class="fixed inset-y-0 right-0 flex max-w-full pl-0 sm:pl-10 z-[10000] pointer-events-none">
    <div class="w-screen max-w-md transform bg-white shadow-2xl transition-all h-full border-l border-neutral-100 pointer-events-auto">
      <div class="flex flex-col h-full bg-white relative p-8 sm:p-10">
        <!-- Header -->
        <div class="flex justify-between items-start mb-8 shrink-0">
          <div class="space-y-1">
            <h3 class="text-3xl font-serif text-neutral-900 italic">
              {{ section.settings.modal_product_name | default: "valentón" }}
            </h3>
            <span class="text-[10px] tracking-widest uppercase text-neutral-400 font-medium block">
              {{ section.settings.modal_edition | default: "edición 001 — manifiesto" }}
            </span>
          </div>
          <button type="button" class="group p-2 -mr-2 text-neutral-400 hover:text-neutral-900 transition-colors rounded-full hover:bg-neutral-50" onclick="document.getElementById('modal-valenton').classList.add('hidden');">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-hover:rotate-90">
              <path d="M18 6 6 18"></path>
              <path d="m6 6 12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Scrollable Content -->
        <div class="flex-1 overflow-y-auto pr-2 space-y-10 pb-4">
          <!-- Section: Concept -->
          <div class="space-y-4">
            <h4 class="flex items-center text-[10px] font-bold uppercase tracking-widest text-neutral-900/40">
              <span class="w-1.5 h-1.5 rounded-full bg-neutral-200 mr-3"></span>
              {{ section.settings.concept_title | default: "El Concepto" }}
            </h4>
            <p class="text-sm text-neutral-600 font-serif leading-relaxed pl-4 border-l border-neutral-100">
              {{ section.settings.concept_text | default: "Valentón no es un vino para corazones rotos, sino para los que se han reconstruido. Esta edición cuestiona el mito del amor romántico: es un homenaje al amor que no duele, al vínculo sin posesión y al desapego con ternura." }}
            </p>
          </div>

          <!-- Section: The Wine -->
          <div class="space-y-4">
            <h4 class="flex items-center text-[10px] font-bold uppercase tracking-widest text-neutral-900/40">
              <span class="w-1.5 h-1.5 rounded-full bg-neutral-200 mr-3"></span>
              {{ section.settings.wine_title | default: "El Vino" }}
            </h4>
            <div class="pl-4 border-l border-neutral-100 space-y-4">
              <div class="grid grid-cols-3 gap-y-3 text-sm items-baseline">
                <span class="text-neutral-400 uppercase text-[10px] tracking-wider font-medium">
                  Tipo
                </span>
                <span class="text-neutral-900 font-medium col-span-2">
                  {{ section.settings.wine_type | default: "Tinto Dulce Natural" }}
                </span>

                <span class="text-neutral-400 uppercase text-[10px] tracking-wider font-medium">
                  Nota
                </span>
                <span class="text-neutral-900 font-medium col-span-2 leading-tight">
                  {{ section.settings.wine_note | default: "Fruta roja madura, goloso en boca, final fresco." }}
                </span>

                <span class="text-neutral-400 uppercase text-[10px] tracking-wider font-medium">
                  Diseño
                </span>
                <span class="text-neutral-900 font-medium col-span-2">
                  {{ section.settings.wine_design | default: "Botella blanca opaca. Etiqueta faja minimalista." }}
                </span>
              </div>
              <div class="bg-neutral-50 p-4 rounded-md mt-2">
                <p class="text-sm text-neutral-800 font-serif italic text-center">
                  "{{ section.settings.wine_quote | default: "Blanco absoluto por fuera. Tinto dulce por dentro. Como quien se atreve a reaprender el amor." }}"
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Footer Action -->
        {% if section.settings.technical_sheet_link != blank %}
          <div class="mt-4 pt-6 border-t border-neutral-100 shrink-0">
            <a href="{{ section.settings.technical_sheet_link }}" target="_blank" class="w-full group flex items-center justify-between p-4 rounded-lg border border-neutral-200 hover:border-neutral-900 hover:bg-neutral-900 hover:text-white transition-all duration-300">
              <span class="text-xs font-bold uppercase tracking-widest">
                {{ section.settings.technical_sheet_text | default: "Ver Ficha Técnica" }}
              </span>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transform -rotate-45 group-hover:rotate-0 transition-transform">
                <path d="M5 12h14"></path>
                <path d="m12 5 7 7-7 7"></path>
              </svg>
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

