<section class="w-full bg-neutral-900 text-white py-32 mt-12">
  <div class="max-w-5xl mx-auto px-6 flex flex-col md:flex-row items-center justify-between gap-12">
    <div class="md:w-1/2 space-y-6 reveal-text">
      <h2 class="text-4xl md:text-5xl font-semibold tracking-tighter lowercase">
        {{ section.settings.impact_title | default: "impacto radical" }}
      </h2>
      <p class="font-serif italic text-neutral-400 text-lg leading-relaxed max-w-md">
        {{ section.settings.impact_description | default: "Albino no busca lucro, busca eco. El 5% de los beneficios va para la Asociación Alba." }}
      </p>
      {% if section.settings.transparency_link != blank %}
        <a href="{{ section.settings.transparency_link }}" class="inline-flex items-center text-xs tracking-widest uppercase font-medium hover:text-neutral-300 transition-colors mt-4">
          {{ section.settings.transparency_text | default: "ver reporte de transparencia" }}
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="arrow-right" class="lucide lucide-arrow-right w-3 h-3 ml-2">
            <path d="M5 12h14"></path>
            <path d="m12 5 7 7-7 7"></path>
          </svg>
        </a>
      {% endif %}
    </div>
    <div class="md:w-1/2 grid grid-cols-2 gap-8 reveal-text delay-200">
      {% for block in section.blocks %}
        {% if block.type == 'metric' %}
          <div class="space-y-2 border-l border-neutral-700 pl-6">
            <span class="text-4xl font-light tracking-tight">{{ block.settings.metric_value }}</span>
            <p class="text-xs uppercase tracking-widest text-neutral-500">
              {{ block.settings.metric_label }}
            </p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Impact Section",
  "settings": [
    {
      "type": "text",
      "id": "impact_title",
      "label": "Impact Title",
      "default": "impacto radical"
    },
    {
      "type": "textarea",
      "id": "impact_description",
      "label": "Impact Description",
      "default": "Albino no busca lucro, busca eco. El 5% de los beneficios va para la Asociación Alba."
    },
    {
      "type": "url",
      "id": "transparency_link",
      "label": "Transparency Report Link"
    },
    {
      "type": "text",
      "id": "transparency_text",
      "label": "Transparency Link Text",
      "default": "ver reporte de transparencia"
    }
  ],
  "blocks": [
    {
      "type": "metric",
      "name": "Metric",
      "settings": [
        {
          "type": "text",
          "id": "metric_value",
          "label": "Metric Value",
          "default": "5%"
        },
        {
          "type": "text",
          "id": "metric_label",
          "label": "Metric Label",
          "default": "para asociación alba"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Impact Section",
      "blocks": [
        {
          "type": "metric",
          "settings": {
            "metric_value": "5%",
            "metric_label": "para asociación alba"
          }
        },
        {
          "type": "metric",
          "settings": {
            "metric_value": "3+",
            "metric_label": "causas activas"
          }
        },
        {
          "type": "metric",
          "settings": {
            "metric_value": "0%",
            "metric_label": "residuos plásticos"
          }
        },
        {
          "type": "metric",
          "settings": {
            "metric_value": "∞",
            "metric_label": "conversaciones"
          }
        }
      ]
    }
  ]
}
{% endschema %}

