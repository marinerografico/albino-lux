<footer class="py-16 flex flex-col items-center justify-center space-y-10 border-t border-neutral-100 bg-white">
  <div class="flex space-x-12">
    {% for link in linklists.footer.links %}
      <a href="{{ link.url }}" class="text-xs font-medium text-neutral-500 hover:text-neutral-900 transition-colors">
        {{ link.title }}
      </a>
    {% endfor %}
  </div>
  <p class="text-[10px] text-neutral-300 tracking-wider font-medium">
    {{ section.settings.footer_text | default: "© albino wines — bebiendo por un mundo mejor" }}
  </p>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "© albino wines — bebiendo por un mundo mejor"
    }
  ]
}
{% endschema %}

