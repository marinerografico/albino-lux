<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ page_title }}{% if current_tags %} &ndash; {{ 'general.meta.tags' | t: tags: current_tags | join: ', ' }}{% endif %}{% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}</title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  <!-- Favicon -->
  {% if shop.favicon %}
    <link rel="icon" type="image/png" href="{{ shop.favicon | image_url: width: 32 }}">
  {% else %}
    <link rel="icon" type="image/x-icon" href="{{ 'favicon.ico' | asset_url }}">
  {% endif %}
  
  <!-- Lucide Icons -->
  <script src="https://unpkg.com/lucide@latest"></script>
  
  <!-- Compiled Tailwind CSS -->
  {{ 'tailwind.css' | asset_url | stylesheet_tag }}
  
  <!-- Main Stylesheet (Custom styles) -->
  {{ 'main.css' | asset_url | stylesheet_tag }}

  {{ content_for_header }}
</head>
<body class="bg-white text-neutral-500 antialiased selection:bg-neutral-900 selection:text-white {% unless template.name == 'cart' %}overflow-hidden relative{% endunless %}" id="main-body">
  
  {% section 'age-gate' %}
  {% section 'navigation' %}
  
  <main id="main-content">
    {{ content_for_layout }}
  </main>
  
  {% section 'footer' %}
  {% section 'product-modal' %}
  {% section 'cart-update-modal' %}

  <!-- Main JavaScript -->
  {{ 'main.js' | asset_url | script_tag }}
</body>
</html>

